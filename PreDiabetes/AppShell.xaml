    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resx="clr-namespace:PreDiabetes.Resources.Languages"
    xmlns:prediabetespages="clr-namespace:PreDiabetes.Pages"
    xmlns:languagespages="clr-namespace:PreDiabetes.Pages.Languages"
    Title="PreDiabetes"
    >

    <TabBar>
        <Tab Title="{Binding Source={x:Static resx:AppResources.Tab_Introducao}, StringFormat='ðŸ“ {0}'}">
            <ShellContent
                Title="{Binding Source={x:Static resx:AppResources.Tab_Introducao}, StringFormat='ðŸ“ {0}'}"
