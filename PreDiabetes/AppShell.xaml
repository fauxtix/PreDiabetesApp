                ContentTemplate="{DataTemplate prediabetespages:PreDiabetesPage}"
                Route="pre-diabetes" />
        </Tab>

        <Tab Title="{Binding Source={x:Static resx:AppResources.TituloIdioma}, StringFormat='ðŸŒ {0}'}">
            <ShellContent
                Title="{Binding Source={x:Static resx:AppResources.TituloIdioma}, StringFormat='ðŸŒ {0}'}"
